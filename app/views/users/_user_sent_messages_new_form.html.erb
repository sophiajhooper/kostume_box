<%= form_with(model: @message, local: true) do |f| %>

  <%= f.hidden_field :sender_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :receiver_id %>

    <%= f.text_field :receiver_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :message_text %>
    <%= f.text_area :message_text, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :costume_id %>

    <%= f.collection_select :costume_id, Costume.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create message", class: "btn btn-block btn-outline-secondary" %>
<% end %>
