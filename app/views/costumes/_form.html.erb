<% was_validated = costume.errors.any? %>

<%= form_with(model: costume, local: true, novalidate: true, class: "mb-3") do |f| %>
  <%= f.hidden_field :owner_id, value: current_user.id %>
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = costume.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <% if image_was_invalid %>
      <% costume.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = costume.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <% if title_was_invalid %>
      <% costume.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% current_availability_class = "form-control" %>
    <% current_availability_was_invalid = costume.errors.include?(:current_availability) %>

    <% if was_validated %>
      <% if current_availability_was_invalid %>
        <% current_availability_class << " is-invalid" %>
      <% else %>
        <% current_availability_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :current_availability %>
    <%= f.select :current_availability, options_for_select(Costume.current_availabilities.keys), {}, class: "form-control" %>
    <% if current_availability_was_invalid %>
      <% costume.errors.full_messages_for(:current_availability).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = costume.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% costume.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = costume.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location %>
    <%= f.text_field :location, class: location_class, placeholder: "Enter location" %>
    <% if location_was_invalid %>
      <% costume.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% theme_class = "form-control" %>
    <% theme_was_invalid = costume.errors.include?(:theme) %>

    <% if was_validated %>
      <% if theme_was_invalid %>
        <% theme_class << " is-invalid" %>
      <% else %>
        <% theme_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :theme_id %>
    <%= f.collection_select :theme_id, Theme.all, :id, :to_s, {}, class: "form-control" %>
    <% if theme_was_invalid %>
      <% costume.errors.full_messages_for(:theme).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% costume_type_class = "form-control" %>
    <% costume_type_was_invalid = costume.errors.include?(:costume_type) %>

    <% if was_validated %>
      <% if costume_type_was_invalid %>
        <% costume_type_class << " is-invalid" %>
      <% else %>
        <% costume_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :costume_type %>
    <%= f.select :costume_type, options_for_select(Costume.costume_types.keys), {}, class: "form-control" %>
    <% if costume_type_was_invalid %>
      <% costume.errors.full_messages_for(:costume_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% size_class = "form-control" %>
    <% size_was_invalid = costume.errors.include?(:size) %>

    <% if was_validated %>
      <% if size_was_invalid %>
        <% size_class << " is-invalid" %>
      <% else %>
        <% size_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :size %>
    <%= f.select :size, options_for_select(Costume.sizes.keys), {}, class: "form-control" %>
    <% if size_was_invalid %>
      <% costume.errors.full_messages_for(:size).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
